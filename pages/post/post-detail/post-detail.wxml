<view class="container">
    <image class="head-image" src="{{post.postImg}}"></image>
    <text class="title">{{post.title}}</text>
    <view class="author-data">
        <view class="author-box">
            <image class="avatar" src="{{post.avatar}}"></image>
            <text class="author">{{post.author}}</text>
        </view>
        <text class="data">{{post.dateTime}}</text>
    </view>
    <text class="detail">{{post.detail}}</text>
    <view class="tool">
        <view class="tool-item"
              catchtap="onUpTap"
              data-post-id="{{post.id}}"
        >
            <image src="/images/icon/wx_app_like.png"></image>
            <text>{{post.upNum}}</text>
        </view>
        <view class="tool-item comment"
              catchtap="onCommentTap"
              data-post-id="{{post.id}}"
        >
            <image src="/images/icon/wx_app_message.png"></image>
            <text>{{post.commentNum}}</text>
        </view>
        <view class="tool-item"
              catchtap="onCollectionTap"
              data-post-id="{{post.id}}"
        >
            <image src="/images/icon/wx_app_collect.png"></image>
            <text>{{post.collectionNum}}</text>
        </view>
    </view>
</view>