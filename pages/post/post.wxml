<view class="container">
    <swiper vertical="{{true}}" circular="true" indicator-dots="true" indicator-active-color="#fff" autoplay="true"
            interval="5000">
        <swiper-item>
            <image src="/images/post/post-1@text.jpg"></image>
        </swiper-item>
        <swiper-item>
            <image src="/images/post/post-2@text.jpg"></image>
        </swiper-item>
        <swiper-item>
            <image src="/images/post/post-3@text.jpg"></image>
        </swiper-item>
    </swiper>
    <block wx:for="{{postList}}">
        <view class="post-container">
            <view class="post-author-data">
                <image src="{{item.avatar}}"/>
                <text>{{item.data}}</text>
            </view>
            <view class="post-data">
                <text class="post-title">{{item.title}}</text>
                <image mode="aspectFill" class="post-image" src="{{item.postImg}}"/>
                <text class="post-content">
                    {{item.content}}
                </text>
            </view>
            <view class="post-like">
                <image src="/images/icon/wx_app_collect.png"/>
                <text>{{item.collectionNum}}</text>
                <image src="/images/icon/wx_app_view.png"/>
                <text>{{item.readingNum}}</text>
                <image src="/images/icon/wx_app_message.png"/>
                <text>{{item.commentNum}}</text>
            </view>
        </view>
    </block>
</view>