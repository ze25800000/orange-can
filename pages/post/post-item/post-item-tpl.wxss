
.post-container {
    display: flex;
    flex-direction: column;
    margin: 20rpx 0 40rpx;
    background-color: #ffffff;
    border-bottom:1px solid #ededed;
    border-top:1px solid #ededed;
    padding-bottom: 5px;
}
.post-author-data {
    margin: 10rpx 0 20rpx 10px;
    display: flex;
    flex-direction: row;
    align-items: center;
}
.post-author-data image {
    width: 60rpx;
    height: 60rpx;
}
.post-author-data text {
    margin-left: 20px;
}
.post-image {
    width: 100%;
    height: 340rpx;
    margin-bottom: 15px;
}
.post-data {
    font-size: 26rpx;
    margin-bottom: 10rpx;
}
.post-title {
    font-size: 16px;
    font-weight: 600;
    color: #333333;
    margin-bottom: 10px;
    margin-left: 10px;
}
.post-content {
    color: #666666;
    font-size: 26rpx;
    margin-bottom: 20rpx;
    margin-left: 20rpx;
    letter-spacing: 2px;
    line-height: 40rpx;
}
.post-like {
    display: flex;
    flex-direction: row;
    font-size: 13px;
    line-height: 16px;
    margin-left: 10px;
    align-items:center;
}
.post-like image {
    height: 16px;
    width: 16px;
    margin-right: 8px;
}
.post-like text {
    margin-right: 20px;
}